<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ua.r4mstein.mathforkids.MainActivity">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pinkie"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/mathExpressionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/my_background"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="40sp"
            android:padding="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:rv_zoom="true">

                <Button
                    android:id="@+id/button0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_background"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"
                    android:onClick="chooseAnswers"/>

            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:rv_zoom="true">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_background"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"
                    android:onClick="chooseAnswers"/>

            </com.andexert.library.RippleView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:rv_zoom="true">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_background"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"
                    android:onClick="chooseAnswers"/>

            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:rv_zoom="true">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_background"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"
                    android:onClick="chooseAnswers"/>

            </com.andexert.library.RippleView>

        </LinearLayout>

        <ImageView
            android:id="@+id/emoIcon"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/rightAnswersTextView"
            android:text="@string/right_answers"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/my_background"
            android:padding="6dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/wrongAnswersTextView"
            android:text="@string/wrong_answers"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/my_background"
            android:padding="6dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>


</RelativeLayout>

